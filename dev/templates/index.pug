        var top_users = [
          {
            image: 'images/content/instagram-1.png',
            login: 'martines_ru',
            title: 'То самое чувство, когда ты на шашлыках с любимой женой',
            like_counter: '210'
          },
          {
            image: 'images/content/instagram-2.png',
            login: 'Михаил Суворов',
            title: 'То самое чувство, когда ты на шашлыках с любимой женой',
            like_counter: '210'
          },
          {
            image: 'images/content/instagram-3.png',
            login: 'semya_martynovyh',
            title: 'Разводим огонь вместе с дедушкой. Мои мужчины!',
            like_counter: '210'
          },
          {
            image: 'images/content/instagram-4.png',
            login: 'Любочка Задонская',
            title: 'Ну и как тут без шашлычного селфи ))',
            like_counter: '210'
          }
        ]
      .columns
        each item in top_users
          .item
            .image(style="background-image: url("+item.image+")"): a(href="#")
            .bottom
              .username: a(href="#") #{item.login}
              .title #{item.title}&nbsp;<a href="#">#text-link</a>
              .tags <a href="#">#камисогонь</a>
              .like-counter
                button #{item.like_counter}
      .details
        a(class="btn" href="#") Смотреть еще
  .m_users.graph-bg
    .wrapper
      .section-title.center
        h2 победители недели
