.m_header
  position relative
  background #f5f5f5
  height 80px
  z-index 10
  @media SM
    height 75px
    margin-bottom 30px
  &:after
    content ''
    position absolute
    left 0
    bottom -27px
    width 100%
    height 56px
    background url("../images/header-bg.png") no-repeat bottom center
  &.pos-abs
    @media SM
      position absolute
      left 0
      top 10px
      width 100%
      background none
      &:after
        display none
      .menu
        ul
          li
            a
              color #fff
  .wrapper
    position relative
    height 100%
  .logo
    width 133px
    height 61px
    position absolute
    left 50%
    top 50%
    margin-left -(@width/2)
    margin-top -(@height/2)
    z-index 5
    @media SM
      left 25px
      margin-left 0
      z-index 5
    a
      display block
      width 100%
      height 100%
      background url("../images/logo.png") no-repeat 0 0
      &:after
        content ''
        display none
        width 165px
        height 56px
        background url("../images/logo.fire.png") no-repeat 0 0
        position absolute
        left 50%
        bottom -66px
        margin-left -(@width/2)
        @media SM
          display block
  .menu
    @media SM
      padding-left 145px
    ul
      transition transform .25s ease-in
      position absolute
      left 0
      top 100%
      background #f5f5f5
      width 100%
      transform translateX(-100%)
      padding-bottom 10px
      z-index 100
      @media SM
        position relative
        transform translateX(0%)
        padding-bottom 0
        top 0
        text-align right
        background none
        line-height 50px
        margin-top 15px
      li
        @media SM
          display inline-block
          vertical-align middle
        a
          anim()
          display block
          padding 10px 15px
          font-size 22px
          line-height 1
          color #000
          @media SM
            font-size 17px
            padding 5px 5px
          @media MD
            padding 10px
            font-size 22px
          @media LG
            padding 10px 25px
          &:hover
            color $green
  .menu-mobile
    width 50px
    height 50px
    margin-top 15px
    @media SM
      display none
    &.is-open
      & + ul
        transform translateX(0%)
      .btn-mobile-menu
        i
          opacity 0
          transform translateX(-5px)
        &:after
          transform rotate(135deg) translate(-6px, 7px)
        &:before
          transform rotate(-135deg) translate(-5px, -6px)
  .btn-mobile-menu
    anim()
    position relative
    display block
    height 50px
    width 50px
    cursor pointer
    background #e6e6e6
    border none
    z-index 5
    @media screen and (min-width: 768px)
      display none
    &:after,
    &:before,
    i
      anim()
      content ''
      position absolute
      left 50%
      width 24px
      margin-left -12px
      height 3px
      background #000
    &:before
      top 15px
    &:after
      bottom 15px
    i
      top 50%
      margin-top -1.5px
  .btn-search-mobile
    sn()
    width 50px
    height 50px
    background #e6e6e6
    position absolute
    right 15px
    top 15px
    cursor pointer
    @media SM
      top 25px
      right 25px
      z-index 5
    @media MD
      display none
    &.is-open
      &:before
        opacity 0
        transform translateX(-10px)
      span
        &:after,
        &:before
          opacity 1
        &:before
          transform rotate(-135deg) translate(-5px, -6px)
        &:after
          transform rotate(135deg) translate(-6px, 7px)
      & + .search
        transform translateX(0%)
    &:before
      anim()
      content ''
      position absolute
      left 50%
      top 50%
      background: url('../images/sprite.png') no-repeat -50px 0;
      width: 22px;
      height: 23px;
      margin-left -(@width/2)
      margin-top -(@height/2)
      retina()
    span
      &:after,
      &:before
        anim()
        content ''
        position absolute
        left 50%
        width 24px
        margin-left -12px
        height 3px
        background #000
        opacity 0
      &:before
        top 15px
      &:after
        bottom 15px
  .search
    transition transform .25s ease-in
    position absolute
    right 0
    top 100%
    width 100%
    padding 0 15px 15px 15px
    background #fff
    z-index 10
    transform translateX(-100%)
    @media MD
      transform translateX(0%)
      width 450px
      top 0
      padding-top 25px
      padding-bottom 25px
      padding-right 25px
      padding-left 0
    @media LG
      width 535px
    form
      position relative
      height 50px
      input,
      button
        display block
        height 100%
      input
        anim(background-color, color, border-color)
        bebas()
        border none
        background #f1f1f1
        color #c1c1c1
        padding 15px 60px 15px 15px
        width 100%
        font-size 22px
        border 1px solid @background
        &:hover
          color #949494
          background-color #d9d9d9
          border-color @background-color
        &:focus
          border-color #f1f1f1
          background #fff
          color #000
      button
        background $green
        width 50px
        height 50px
        position absolute
        right 0
        top 0
        border none
        &:hover
          background-color #88a203
        &:active
          background-color #7e9604
        &:before
          content ''
          position absolute
          left 50%
          top 50%
          background: url('../images/sprite.png') no-repeat 0 0;
          width: 22px;
          height: 23px;
          margin-left -(@width/2)
          margin-top -(@height/2)
          retina()


