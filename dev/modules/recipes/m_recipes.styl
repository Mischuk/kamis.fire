.m_recipes
  .details
    margin-top 30px
    text-align center
    @media SM
      margin-top 10px

  .recipes-list
    clearfix()
    @media SM
      padding-top 15px
      margin-left -15px
      margin-right -15px
  .item
    border-radius 10px
    overflow hidden
    background #f1f1f1
    @media SM
      float left
      width 50%
      padding-left 15px
      padding-right 15px
      background none
      margin-bottom 30px
    @media MD
      width 33.333%
    & + .item
      margin-top 15px
      @media screen and (min-width: 380px)
        margin-top 30px
      @media SM
        margin-top 0
    .image
      height 205px
      background-repeat no-repeat
      background-position 50%
      background-size cover
      @media SM
        border-radius 10px 10px 0 0
        overflow hidden
      &:hover
        a
          background rgba(253, 158, 40, 0.2)
      a
        anim()
        display block
        width 100%
        height 100%
        background rgba(253, 158, 40, 0)

    .bottom
      padding 25px
      line-height 1
      position relative
      @media SM
        background #f1f1f1
        border-radius 0 0 10px 10px
      .title
        font-size 27px
        line-height 1
        padding-right 60px
        @media SM
          height 81px
          overflow hidden
        a
          anim()
          color #000
          display inline-block
          vertical-align middle
          &:hover
            color $orange
      .like-counter
        position absolute
        right 25px
        top 25px
        font-size 24px



