.m_contacts
  position relative
  .equal-columns
    overflow hidden
    & + .equal-columns
      margin-top 15px
      @media screen and (min-width: 880px)
        margin-top 2%
    .column
      background #f1f1f1
      padding 30px 20px
      @media screen and (max-width: 879px)
        height auto !important
        & + .column
          margin-top 15px
      @media screen and (min-width: 880px)
        float left
        width 31%
        margin 0 1%
        padding-top 40px
        padding-bottom 40px
  .locate
    font-size 27px
    line-height 1
    margin-bottom 15px
    padding-left 25px
  .social-buttons
    padding-left 25px
  ul
    ubuntu()
    font-size 15px
    line-height 24px
    li
      position relative
      padding-left 25px
      & + li
        margin-top 15px
      &.address
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat 0 -150px;
          width: 13px;
          height: 18px;
          position absolute
          left 0
          top 3px
      &.tel
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -50px -150px;
          width: 15px;
          height: 15px;
          position absolute
          left 0
          top 5px
      &.place
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -150px -150px;
          width: 15px;
          height: 17px;
          position absolute
          left 0
          top 2px
      &.email
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -100px -150px;
          width: 16px;
          height: 13px;
          position absolute
          left 0
          top 1px
          @media XS
            top 5px
        span
          display block
          & + span
            margin-top 10px
          b
            display block
            line-height 1
            @media XS
              display inline
            @media screen and (min-width: 880px)
              display block


