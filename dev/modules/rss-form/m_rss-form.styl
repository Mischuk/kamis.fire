.m_rss-form
  position relative
  margin-top 80px
  padding 50px 15px
  background $green
  text-align center
  @media SM
    margin-top 100px
  &:after
    content ''
    position absolute
    left 0
    top -82px
    width 100%
    height 82px
    background url("../images/footer.png") no-repeat top center
    z-index -1
    @media screen and (min-width: 1920px)
      background-size cover
  .copyright
    color #fff
    margin-top 15px
    @media SM
      margin-top 30px
  .title
    position relative
    color #fff
    font-size 31px
    line-height 1
    padding 0 60px 0 72px
    margin-bottom 15px
    display inline-block
    vertical-align middle
    @media XS
      margin-bottom 30px
    @media SM
      font-size 40px
    &:after
      content ''
      position absolute
      left 0
      top 50%
      width 52px
      height 63px
      margin-top -(@height/2)
      background url("../images/rss-form-icon-1.png") no-repeat 0 0
    &:before
      content ''
      position absolute
      right 0
      top 50%
      width 40px
      height 54px
      margin-top -(@height/2)
      background url("../images/rss-form-icon-2.png") no-repeat 0 0
  form
    input
      anim(background-color, color, border-color)
      bebas()
      border none
      background #f1f1f1
      color #c1c1c1
      padding 15px 60px 15px 15px
      width 100%
      font-size 22px
      line-height 1
      height 50px
      border 1px solid @background
      border-radius 30px
      margin-bottom 15px
      max-width 370px
      display block
      margin-left auto
      margin-right auto
      @media XS
        margin-bottom 30px
      @media SM
        display inline-block
        vertical-align middle
        margin-bottom 0
        margin-right 15px
        max-width 270px
      &:hover
        color #949494
        background-color #d9d9d9
        border-color @background-color
      &:focus
        border-color #f1f1f1
        background #fff
        color #000
    button
      background $yellow
      border none
      height 50px
      bebas()
      anim()
      sn()
      font-size 24px
      border-radius 30px
      padding 0 30px
      @media SM
        display inline-block
        vertical-align middle
      &:hover
        background #eacc00
      &:active
        background #dfc201