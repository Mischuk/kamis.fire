.m_blog
  clearfix()
  @media SM
    padding-top 15px
    margin-left -15px
    margin-right -15px
  .item
    @media SM
      float left
      width 50%
      padding-left 15px
      padding-right 15px
      background none
      margin-bottom 30px
    @media screen and (min-width: 768px) and (max-width: 991px)
      &:nth-child(2n+1)
        clear left
    @media MD
      width 33.333%
      &:nth-child(3n+1)
        clear left
    & + .item
      margin-top 15px
      @media screen and (min-width: 380px)
        margin-top 30px
      @media SM
        margin-top 0
    .image
      height 200px
      background-repeat no-repeat
      background-position 50%
      background-size cover
      border-radius 10px 10px 0 0
      &:hover
        a
          background rgba(253, 158, 40, 0.2)
      a
        anim()
        display block
        width 100%
        height 100%
        background rgba(253, 158, 40, 0)
    .bottom
      background #f1f1f1
      padding 25px
      border-radius 0 0 10px 10px
      .title
        a
          anim(color)
          font-size 27px
          line-height 1
          color #000
          &:hover
            color $orange
      .desc
        ubuntu()
        padding-top 10px
        font-size 15px
        line-height 24px
.m_blog-inner
  padding-top 15px
  @media SM
    background #fff
    margin-top -50px
    padding-left 50px
    padding-right 50px
    padding-top 25px
  @media MD
    padding-left 100px
    padding-right 100px
    max-width 84%
    margin-left auto
    margin-right auto
    margin-top -90px
  h1, h2, h3, h4, h5
    text-align center