.m_items
  .details
    position relative
    z-index 1
    text-align center
    margin-top 10px
  .columns
    clearfix()
    @media screen and (min-width: 420px)
      margin-left -15px
      margin-right -15px
  .item
    overflow hidden
    margin-bottom 30px
    @media screen and (min-width: 420px)
      float left
      width 50%
      padding-left 15px
      padding-right 15px
      background none
    @media screen and (min-width: 420px) and (max-width: 767px)
      &:nth-child(2n+1)
        clear left
    @media SM
      width 25%
      padding-left 5px
      padding-right 5px
      &:nth-child(4n+1)
        clear left
    @media MD
      padding-left 15px
      padding-right 15px
    &:last-child
      margin-bottom 0
    .postdate
      text-align center
      font-size 18px
      line-height 1
      padding-bottom 10px
      @media SM
        font-size 24px
        padding-bottom 20px
    .image
      height 205px
      background-repeat no-repeat
      background-position top center
      background-size cover
      @media SM
        height 150px
      @media MD
        height 225px
      &:hover
        a
          background rgba(253, 158, 40, 0.2)
      a
        anim()
        display block
        width 100%
        height 100%
        background rgba(253, 158, 40, 0)

    .bottom
      padding 10px 0
      line-height 1
      position relative
      > div
        margin-bottom 10px
        &:last-child
          margin-bottom 0
      .title
        ubuntu()
        font-weight 500
        font-size 15px
        line-height 18px
        @media LG
          font-size 18px
          line-height 1.2
        a
          anim()
          color #000
          display inline-block
          vertical-align middle
          &:hover
            color #91ad05
            text-decoration underline
      .like-counter
        ubuntu()
        font-size 15px
        line-height 18px
        font-weight 500