.m_address
  position relative
  padding-top 50px
  .address-list
    max-width 970px
    margin-left auto
    margin-right auto
    .item
      position relative
      background #f1f1f1
      padding 0
      @media SM
        min-height 155px
        display table
        width 100%
      & + .item
        margin-top 15px
        @media SM
          margin-top 25px
      .details
        text-align center
        padding 15px
        @media SM
          display table-cell
          vertical-align middle
          padding-left 275px
          text-align left
        .title
          ubuntu()
          font-size 18px
          margin-bottom 10px
        .desc
          ubuntu()
          font-size 15px
          line-height 24px
          p
            margin-bottom 15px
            &:last-child
              margin-bottom 0
            a
              color $green
              &:hover
                text-decoration underline
      .image
        height 120px
        line-height 120px
        text-align center
        background #f6f6f6
        @media SM
          position absolute
          left 0
          top 0
          width 245px
          line-height 155px
          height 100%
        a
          display block
          width 100%
          height 100%
          img
            max-width 100%
            max-height 100%
            display inline-block
            vertical-align middle