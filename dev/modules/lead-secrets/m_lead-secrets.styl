.m_lead-secrets
  .secret-nav,
  .secret-list
    @media screen and (min-width: 380px)
      padding-left 4%
      padding-right 4%
    @media SM
      padding-left 0
      padding-right 0
  .details
    margin-top 30px
    text-align center
    @media SM
      margin-top 10px
    a
      display none
      &.current
        display inline-block
  .secret-nav
    position relative
    margin-bottom 15px
    ul
      background #e6e6e6
      border-radius 0 0 30px 30px
      overflow hidden
      position absolute
      left 0
      top 100%
      width 100%
      display none
      @media screen and (min-width: 380px)
        width 92%
        left 4%
      @media SM
        clearfix()
        position static
        width 100%
        left 0
        display block
        border-radius 0
        background none
      li
        @media SM
          float left
          margin-right 15px
        a
          anim()
          display block
          color #000
          font-size 27px
          line-height 1
          padding 8px 30px
          @media SM
            background #e6e6e6
            border-radius 30px
          &:hover
            @media SM
              background #e6e6e6 - 15%
          &.current
            background #e6e6e6 - 15%
            @media SM
              background $orange
              color #fff

    .selected-secret-collapse
      position relative
      background #e6e6e6
      font-size 27px
      padding 8px 30px
      line-height 1
      border-radius 30px
      @media SM
        display none !important
      &.is-open
        border-radius 30px 30px 0 0
        &:after
          transform rotate(180deg)
        & + ul
          display block
      &:after
        content ''
        position absolute
        right 25px
        top 50%
        background: url('../images/sprite.png') no-repeat -150px -100px;
        width: 16px;
        height: 10px;
        margin-top -(@height/2)
        retina()
  .secret-list
    clearfix()
    @media SM
      padding-top 15px
      margin-left -15px
      margin-right -15px
  .item
    display none
    @media SM
      float left
      width 50%
      padding-left 15px
      padding-right 15px
      background none
      margin-bottom 30px
    @media MD
      width 33.333%
    &.current.hide-mobile
      display none
      @media MD
        display block
    &.current
      display block
    & + .item
      margin-top 15px
      @media screen and (min-width: 380px)
        margin-top 30px
      @media SM
        margin-top 0
    .image
      height 200px
      background-repeat no-repeat
      background-position 50%
      background-size cover
      border-radius 10px 10px 0 0
      &:hover
        a
          background rgba(253, 158, 40, 0.2)
      a
        anim()
        display block
        width 100%
        height 100%
        background rgba(253, 158, 40, 0)
    .bottom
      background #f1f1f1
      padding 25px
      border-radius 0 0 10px 10px
      .title
        a
          anim(color)
          font-size 27px
          line-height 1
          color #000
          &:hover
            color $orange
      .desc
        ubuntu()
        padding-top 10px
        font-size 15px
        line-height 24px