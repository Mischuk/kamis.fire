/* TRANSITION */
/* div { anim(opacity, transform, color) } */
$animation_type = cubic-bezier(0.25, -0.55, 0.25, 0.25);

anim(a = null, b = null, c = null, d = null)
  if ( a != null ) && (b != null) && (c != null) && (d != null)
    transition a 300ms $animation_type, b 300ms $animation_type, c 300ms $animation_type, d 300ms $animation_type
  else if ( a != null ) && (b != null) && (c != null)
    transition a 300ms $animation_type, b 300ms $animation_type, c 300ms $animation_type
  else if ( a != null ) && (b != null)
    transition a 300ms $animation_type, b 300ms $animation_type
  else if ( a != null )
    transition a 300ms $animation_type
  else
    transition all 300ms $animation_type



/* BASE MIXINS */
clearfix()
  &:before
  &:after
    content ''
    display table
    clear both
sn()
  -webkit-touch-callout none
  -khtml-user-select none
  user-select none

retina()
  @media only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min--moz-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2),  only screen and (min-device-pixel-ratio: 1.5), only screen and (min-resolution: 192dpi)
    background-image url('../images/sprite@2x.png')
    background-size 319px