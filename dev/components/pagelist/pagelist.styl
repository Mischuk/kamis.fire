#pagelist .site-templates::-webkit-scrollbar
  width 5px
#pagelist .site-templates::-webkit-scrollbar-track
  background #3b3a36 - 10%
  border-radius 10px
#pagelist .site-templates::-webkit-scrollbar-thumb
  background #3b3a36 - 50%
#pagelist
  sn()
  transition transform 300ms ease-in
  position fixed
  left -200px
  top 0
  width 200px
  height 100%
  z-index 10
  &.is-open
    transition transform 300ms ease-out
    transform translateX(200px)
    box-shadow 0 0 5px rgba(0,0,0,.5)
    .pagelist-btn
      &:before, &:after
        margin-top 0
  .pagelist-btn
    width 50px
    height 50px
    background #3b3a36
    position absolute
    right -50px
    top 150px
    box-shadow 0 0 5px rgba(0,0,0,.5)
    border-radius 0 5px 5px 0
    cursor pointer
    &:after,
    &:before
      transition background-color 300ms ease
      height 2px
      width 20px
      background-color #3b3a36 + 50%
      display block
      content ''
      position absolute
      left 50%
      top 50%
      margin-left -(@width/2)
    &:after
      transform rotate(45deg)
      transition all 120ms ease
      margin-top -7px
    &:before
      transform rotate(-45deg)
      transition all 120ms ease
      margin-top 7px
    &:hover
      &:after, &:before
        background-color #3b3a36 + 90%

  .pagelist-container
    background #3b3a36
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    padding 15px
    @media screen and (max-height: 600px)
      padding 0
  .site-logo
    height 100px
    text-align center
    line-height @height
    @media screen and (max-height: 600px)
      display none
    img
      display inline-block
      vertical-align middle
      max-width 100%
      max-height 100%
  .site-templates
    border-top 1px solid #3b3a36 + 15%
    margin 0 -15px
    padding 15px
    @media screen and (max-height: 600px)
      margin 0
      border-top none
      max-height 100%
      overflow auto

    li
      margin 8px 0
    a
      transition all .25s ease-in
      color #3b3a36 + 50%
      border-bottom 1px solid @color
      font-size 16px
      line-height 1
      &:hover
        color #3b3a36 + 90%
        border-color @color
